    grid-template-rows: 40px;
    gap: 5px;
    margin-top: 20px;
}

.carousel .list .item .buttons button {
    border: none;
    background-color: #ede7e7;
    letter-spacing: 3px;
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
}

.carousel .list .item .buttons button:nth-child(2) {
