/* Carousel */
.carousel {
    height: 100vh;
    margin-top: -50px;
    width: 100vw;
    overflow: hidden;
    position: relative;
}

/* Carousel Items */
.carousel .list .item {
    width: 100%;
    height: 100%;
    position: absolute;
    inset: 0;
}

